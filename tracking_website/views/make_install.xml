<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="make_install" name="Ticket">
        <t t-call="website.layout">
            <section class="s_comparisons pt32 pb32">
                <div id="form_temp">
                    <div id="wrap" class="oe_structure oe_empty">
                        <div class="container">
                            <form method="post" action="/create/web_form_record">
                                <div class="s_website_form_rows row s_col_no_bgcolor">
                                    <input type="hidden" name="csrf_token"
                                           t-att-value="request.csrf_token()"/>
                                    <div class="form-group">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px" for="contact1">
                                            <span class="s_website_form_label_content">Your Name</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <input type="text" name="name"
                                               id="name"
                                               class="form-control"
                                               placeholder="Mitchel Admin"
                                               required="required"/>
                                    </div>
                                    <br/>
                                    <div class="form-group">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px" for="contact1">
                                            <span class="s_website_form_label_content">Your Email</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <input type="email" name="email"
                                               id="email"
                                               class="form-control"
                                               placeholder="mitchel_admin@gmail.com"
                                               required="required"/>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px" for="contact1">
                                            <span class="s_website_form_label_content">
                                                Appointment Date
                                            </span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <input type="date" name="date"
                                               id="date"
                                               class="form-control"/>
                                    </div>
                                    <br/>
                                    <div class="form-group">
                                        <div class='row ml-1'
                                             style="width:99%;">
                                            <div class="form-group col-12 show_total_project">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <table class="table table-borderless h-100 m-0 total_project_costs">
                                                        <thead>
                                                            <tr>
                                                                <td>
                                                                    <label class="col-form-label col-sm-auto s_website_form_label"
                                                                           style="width: 200px" for="contact1">
                                                                        <span class="s_website_form_label_content">
                                                                            City
                                                                        </span>
                                                                        <span class="s_website_form_mark">*</span>
                                                                    </label>

                                                                </td>
                                                                <td>
                                                                    <label class="col-form-label col-sm-auto s_website_form_label"
                                                                           style="width: 200px" for="contact1">
                                                                        <span class="s_website_form_label_content">
                                                                            Branch
                                                                        </span>
                                                                        <span class="s_website_form_mark">*</span>
                                                                    </label>
                                                                </td>
                                                                <td>
                                                                    <label class="col-form-label col-sm-auto s_website_form_label"
                                                                           style="width: 200px" for="contact1">
                                                                        <span class="s_website_form_label_content">
                                                                            Vehicle Type
                                                                        </span>
                                                                        <span class="s_website_form_mark">*</span>
                                                                    </label>
                                                                </td>
                                                                <td>
                                                                    <label class="col-form-label col-sm-auto s_website_form_label"
                                                                           style="width: 200px" for="contact1">
                                                                        <span class="s_website_form_label_content">
                                                                            Vehicle Plate no
                                                                        </span>
                                                                        <span class="s_website_form_mark">*</span>
                                                                    </label>
                                                                </td>

                                                                <td>
                                                                    <label class="col-form-label col-sm-auto s_website_form_label"
                                                                           style="width: 200px" for="contact1">
                                                                        <span class="s_website_form_label_content">
                                                                            Accessories
                                                                        </span>
                                                                        <span class="s_website_form_mark">*</span>
                                                                    </label>
                                                                </td>
                                                                <td width="5%"></td>
                                                            </tr>
                                                        </thead>

                                                        <div class="collapse">
                                                            <tbody id="order_lines" class="order_lines">
                                                                <tr>
                                                                    <td>
                                                                        <div class="d-flex">
                                                                            <select name="state_id"
                                                                                    id="state_id"
                                                                                    class="form-control link-style"
                                                                                    required="required">
                                                                                <option value="null"></option>
                                                                                <t t-foreach='state_rec'
                                                                                   t-as="state">
                                                                                    <option
                                                                                            t-att-value="state.id"
                                                                                            t-esc="state.name"/>
                                                                                </t>
                                                                            </select>
                                                                        </div>
                                                                    </td>

                                                                    <td>
                                                                        <div class="d-flex">
                                                                            <input type="text" name="branch"
                                                                                   id="branch"
                                                                                   class="form-control"
                                                                                   required="required"/>
                                                                        </div>
                                                                    </td>

                                                                    <td>
                                                                        <div class="d-flex">
                                                                            <input type="text" name="vehicle_type"
                                                                                   id="vehicle_type"
                                                                                   class="form-control"
                                                                                   required="required"/>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        <div class="d-flex">
                                                                            <input type="text" name="plate_no"
                                                                                   id="plate_no"
                                                                                   class="form-control"
                                                                                   placeholder="1485 T R A"
                                                                                   required="required"/>
                                                                        </div>
                                                                    </td>

                                                                    <td>
                                                                        <div class="d-flex add-done" id="add_done">
                                                                            <input type="text" name="accessories"
                                                                                   id="accessories"
                                                                                   class="form-control"/>
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </div>
                                                    </table>
                                                </div>
                                                <textarea class="d-none"
                                                          name="data_line_ids">
                                                </textarea>
                                                <div>
                                                    <button type="button"
                                                            id="add_line"
                                                            class="btn btn-info add_total_project button-color"
                                                            style="float: right; margin-right: -15px;">
                                                        <i class="fa fa-plus"/>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br/>
                                    <div class="form-group">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px" for="contact1">
                                            <span class="s_website_form_label_content">
                                                Import Excel
                                            </span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <input type="file" name="file"
                                               id="file"
                                               class="form-control"/>
                                    </div>
                                    <div class="clearfix oe_login_buttons">
                                        <span>
                                            <button type="submit" class="custom_create btn btn-primary" style="margin: 30px 0px;">Submit
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </t>
        <script>
            var lineCount = 1;
            document.getElementById('add_line').addEventListener('click', function() {
            var newLine = document.createElement('tr');
            newLine.classList.add('order_line');
            newLine.id = 'line_' + lineCount;
            newLine.innerHTML = `
            <tr>
                <td>
                    <div class="d-flex">
                        <select name="state_id"
                                id="state_id"
                                class="form-control link-style"
                                required="required">
                            <option value="null"></option>
                            <t t-foreach='state_rec'
                               t-as="state">
                                <option
                                        t-att-value="state.id"
                                        t-esc="state.name"/>
                            </t>
                        </select>
                    </div>
                </td>

                <td>
                    <div class="d-flex">
                        <input type="text" name="branch"
                               id="branch"
                               class="form-control"
                               required="required"/>
                    </div>
                </td>

                <td>
                    <div class="d-flex">
                        <input type="text" name="vehicle_type"
                               id="vehicle_type"
                               class="form-control"
                               required="required"/>
                    </div>
                </td>
                <td>
                    <div class="d-flex">
                        <input type="text" name="plate_no"
                               id="plate_no"
                               class="form-control"
                               required="required"/>
                    </div>
                </td>
                <td>
                    <div class="d-flex">
                        <input type="text" name="accessories"
                               id="accessories"
                               class="form-control"/>
                    </div>
                </td>
                <button type="button"
                        class="btn fa fa-trash-o remove_line"
                        style="color: red; float: right; font-size:24px;"
                        name="delete"
                        aria-label="Delete row 1">
                    <i class="fa fa-trash-alt"/>
                </button>
            </tr>
            `;
            document.getElementById('order_lines').appendChild(newLine);
            lineCount++;
            });

            // Event delegation for removing lines
            document.getElementById('order_lines').addEventListener('click', function(e) {
            if (e.target.classList.contains('remove_line')) {
            e.target.closest('.order_line').remove();
            }
            });
        </script>
    </template>
</odoo>